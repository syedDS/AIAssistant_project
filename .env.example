# GraphRAG Security Architect - Environment Variables
# Copy this file to .env and update values as needed

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable Knowledge Graph (requires Neo4j)
# Set to 'true' to enable, 'false' to disable (faster indexing)
ENABLE_KNOWLEDGE_GRAPH=false

# Enable LLM Entity Extraction (slower but extracts entities)
ENABLE_LLM_ENTITY_EXTRACTION=false

# =============================================================================
# NEO4J CONFIGURATION (only needed if ENABLE_KNOWLEDGE_GRAPH=true)
# =============================================================================

NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# =============================================================================
# LLM CONFIGURATION
# =============================================================================

# Ollama LLM model for Q&A and entity extraction
LLM_MODEL=llama3.2

# Temperature for LLM (0.0 = deterministic, 1.0 = creative)
LLM_TEMPERATURE=0.3

# Ollama embedding model for vector search
EMBEDDING_MODEL=mxbai-embed-large

# =============================================================================
# OPTIONAL: OLLAMA HOST (if not running locally)
# =============================================================================

# OLLAMA_HOST=http://localhost:11434

# =============================================================================
# OPTIONAL: FLASK SETTINGS
# =============================================================================

# FLASK_ENV=development
# FLASK_DEBUG=1
# SECRET_KEY=your-secret-key-here
